{
  "manifest_version": 3,
  "name": "Auto Apply",
  "version": "1.0",
  "description": "An extension to get AI-powered answers and manage your resume.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "login.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "side_panel": {
    "default_path": "login.html"
  }
}